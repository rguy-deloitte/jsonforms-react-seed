{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "label": "Username",
      "scope": "#/properties/username/text"
    },
    {
      "type": "Control",
      "label": "Password",
      "scope": "#/properties/password/text",
      "options": {
        "inputType": "password"
      }
    },
    {
      "type": "Control",
      "label": "User type",
      "scope": "#/properties/usertype/radio",
      "options": {
        "id": "shoes",
        "items": [
          {
            "label": "Administrator",
            "value": "admin"
          },
          {
            "label": "Read/write",
            "value": "rw"
          },
          {
            "label": "Read only",
            "value": "r"
          }
        ]
      }
    },
    {
      "type": "Control",
      "label": "Comments",
      "scope": "#/properties/comments/textarea",
      "hint": "Add any additional information"
    }
  ]
}
