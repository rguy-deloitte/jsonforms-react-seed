{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "label": "Username",
      "scope": "#/properties/username/text"
    },
    {
      "type": "Control",
      "label": "Password",
      "scope": "#/properties/password/text",
      "options": {
        "inputType": "password"
      }
    },
    {
      "type": "Control",
      "label": "Do you wear shoes?",
      "scope": "#/properties/shoes/radio",
      "options": {
        "id": "shoes",
        "items": [
          {
            "label": "Always",
            "value": "always"
          },
          {
            "label": "Sometimes",
            "value": "sometimes"
          },
          {
            "label": "Never",
            "value": "never"
          }
        ]
      }
    },
    {
      "type": "Control",
      "label": "Tell us about your socks",
      "scope": "#/properties/socks/textarea",
      "hint": "Tell us about colour and brand of socks"
    }
  ]
}
